    <script>
        // Admin functionality
        const ADMIN_CODE = "JCSCsaw@0ssiskal,-+";
        let isMaintenanceMode = false;
        let isAdminLoggedIn = false;

        // Check maintenance mode on load
        window.addEventListener('load', function() {
            const maintenanceStatus = localStorage.getItem('maintenanceMode');
            if (maintenanceStatus === 'true') {
                enableMaintenanceMode();
            }
        });

        function openAdminModal() {
            document.getElementById('admin-modal').classList.remove('hidden');
            document.getElementById('admin-code').focus();
        }

        function closeAdminModal() {
            document.getElementById('admin-modal').classList.add('hidden');
            document.getElementById('admin-code').value = '';
            document.getElementById('admin-error').classList.add('hidden');
        }

        function openAdminPanel() {
            document.getElementById('admin-panel').classList.remove('hidden');
            updateAdminPanel();
        }

        function closeAdminPanel() {
            document.getElementById('admin-panel').classList.add('hidden');
            isAdminLoggedIn = false;
        }

        function updateAdminPanel() {
            const status = document.getElementById('maintenance-status');
            const toggle = document.getElementById('maintenance-toggle');
            const info = document.getElementById('maintenance-info');
            
            if (isMaintenanceMode) {
                status.textContent = 'MAINTENANCE';
                status.className = 'text-red-600 font-semibold mr-3';
                toggle.textContent = 'Disable Maintenance';
                toggle.className = 'bg-gradient-to-r from-green-500 to-emerald-600 text-white px-6 py-2 rounded-lg font-semibold hover:from-green-400 hover:to-emerald-500 transition-all';
                info.classList.remove('hidden');
            } else {
                status.textContent = 'ONLINE';
                status.className = 'text-green-600 font-semibold mr-3';
                toggle.textContent = 'Enable Maintenance';
                toggle.className = 'bg-gradient-to-r from-red-500 to-orange-600 text-white px-6 py-2 rounded-lg font-semibold hover:from-red-400 hover:to-orange-500 transition-all';
                info.classList.add('hidden');
            }
        }

        function toggleMaintenance() {
            if (isMaintenanceMode) {
                disableMaintenanceMode();
            } else {
                enableMaintenanceMode();
            }
        }

        function enableMaintenanceMode() {
            isMaintenanceMode = true;
            localStorage.setItem('maintenanceMode', 'true');
            document.getElementById('maintenance-overlay').classList.remove('hidden');
            updateAdminPanel();
            
            // Show success message
            if (isAdminLoggedIn) {
                showAdminMessage('ðŸš§ Maintenance mode enabled! Site is now offline for visitors.', 'success');
            }
        }

        function disableMaintenanceMode() {
            isMaintenanceMode = false;
            localStorage.setItem('maintenanceMode', 'false');
            document.getElementById('maintenance-overlay').classList.add('hidden');
            updateAdminPanel();
            
            // Show success message
            if (isAdminLoggedIn) {
                showAdminMessage('âœ… Maintenance mode disabled! Site is now live.', 'success');
            }
        }

        function clearCache() {
            // Simulate cache clearing
            showAdminMessage('ðŸ”„ Cache cleared successfully!', 'success');
            
            // Update visitor count (simulate)
            const visitorCount = document.getElementById('visitor-count');
            const currentCount = parseInt(visitorCount.textContent.replace(',', ''));
            visitorCount.textContent = (currentCount + Math.floor(Math.random() * 50) + 10).toLocaleString();
        }

        function showAdminMessage(message, type) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg transition-all transform translate-x-full ${
                type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
            }`;
            messageDiv.textContent = message;
            document.body.appendChild(messageDiv);
            
            setTimeout(() => {
                messageDiv.classList.remove('translate-x-full');
            }, 100);
            
            setTimeout(() => {
                messageDiv.classList.add('translate-x-full');
                setTimeout(() => {
                    document.body.removeChild(messageDiv);
                }, 300);
            }, 3000);
        }

        // Admin login form handler
        document.getElementById('admin-login-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const enteredCode = document.getElementById('admin-code').value.trim();
            
            console.log('Entered code:', enteredCode);
            console.log('Expected code:', ADMIN_CODE);
            console.log('Match:', enteredCode === ADMIN_CODE);
            
            if (enteredCode === ADMIN_CODE) {
                isAdminLoggedIn = true;
                closeAdminModal();
                openAdminPanel();
                showAdminMessage('âœ… Admin access granted!', 'success');
            } else {
                document.getElementById('admin-error').classList.remove('hidden');
                document.getElementById('admin-code').value = '';
                setTimeout(() => {
                    document.getElementById('admin-error').classList.add('hidden');
                }, 3000);
            }
        });

        // Keyboard shortcut for admin access (Ctrl+Shift+A)
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.shiftKey && e.key === 'A') {
                e.preventDefault();
                openAdminModal();
            }
        });

        // Mobile menu toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        });

        // Smooth scrolling for navigation links
        function scrollToSection(sectionId) {
            document.getElementById(sectionId).scrollIntoView({
                behavior: 'smooth'
            });
        }

        // Add smooth scrolling to all navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add scroll effect to navbar
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('nav');
            if (window.scrollY > 50) {
                navbar.classList.add('shadow-lg');
            } else {
                navbar.classList.remove('shadow-lg');
            }
        });

        // Scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate');
                }
            });
        }, observerOptions);

        // Observe all elements with animate-on-scroll class
        document.addEventListener('DOMContentLoaded', function() {
            const animateElements = document.querySelectorAll('.animate-on-scroll');
            animateElements.forEach(el => {
                observer.observe(el);
            });
        });
    </script>
